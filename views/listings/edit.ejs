<% layout('layouts/boilerplate') %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h2 class="text-center mb-4"><b>‚úèÔ∏è Edit Your Listing</b></h2>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate class=" needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label"><b>Title</b></label>
            <input type="text" 
                name="listing[title]" 
                value="<%= listing.title %>" 
                class="form-control"
                placeholder="Enter listing title"
                required
            />
            <div class="valid-feedback">Title looks Good</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label"><b>Description</b></label>
            <textarea name="listing[description]" 
                cols="30" rows="4"
                class="form-control"
                placeholder="Describe your listing..."><%= listing.description %>required</textarea>
                <div class="invalid-feedback">Please enter a short description</div>
                
        </div>
        <div class="mb-3">
            <label for="image" class="form-label"><b>Image URL</b></label>
            <input type="url" 
                name="listing[image]"
                value="<%= listing.image %>"
                class="form-control"
                required
                placeholder="Paste image URL here">
            <% if (listing.image) { %>
                <div class="text-center mt-2">
                    <img src="<%= listing.image %>" alt="Listing Image" width="200" style="border-radius:8px; box-shadow:0 2px 8px #ccc;">
                </div>
            <% } %>
            
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label"><b>Price</b></label>
                <input type="number"
                    name="listing[price]" 
                    value="<%= listing.price %>" 
                    class="form-control"
                    min="0"
                    required
                    placeholder="Price">
                    <div class="invalid-feedback">Please enter valid price</div>
                    
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label"><b>Country</b></label>
                <input type="text" 
                    name="listing[country]" 
                    value="<%= listing.country %>"
                    class="form-control"
                    required
                    placeholder="Country">
                     <div class="invalid-feedback">Please enter valid country</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label"><b>Location</b></label>
            <input type="text" 
                name="listing[location]" 
                value="<%= listing.location %>" 
                class="form-control"
                required
                placeholder="Location">
                <div class="invalid-feedback">Location should be valid</div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-dark edit-btn mt-3">üíæ Save Changes</button>
        </div>
        <br>
        <br>
    </form>
    </div>
</div>
