<% layout('layouts/boilerplate') %>
<div class="row justify-content-center align-items-center min-vh-100" style="background: linear-gradient(120deg, #fff 0%, #fff 100%);">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4" style="background: rgba(255,255,255,0.95);">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <img src="https://img.icons8.com/color/96/000000/add-user-group-man-man.png" alt="Sign Up Icon" style="width:60px;">
                </div>
                <h2 class="mb-4 text-center text-primary fw-bold" style="letter-spacing:1px;">Sign Up on <span style="color:#6366f1;">Nestelo</span></h2>
                <form action="/signup" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label"><b>Username</b></label>
                        <input 
                            type="text"
                            id="username"
                            name="username"
                            class="form-control form-control-lg"
                            required
                            placeholder="Enter your username"
                            oninput="this.classList.add('is-valid')"
                        />
                        <div class="valid-feedback">Looking good!</div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label"><b>Email</b></label>
                        <input 
                            type="email"
                            id="email"
                            name="email"
                            class="form-control form-control-lg"
                            required
                            placeholder="Enter your email"
                        />
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label"><b>Password</b></label>
                        <input 
                            type="password"
                            id="password"
                            name="password"
                            class="form-control form-control-lg"
                            required
                            placeholder="Create a password"
                        />
                    </div>
                    <button class="btn btn-gradient w-100 fw-bold py-2" type="submit" style="background: linear-gradient(90deg, #6366f1 0%, #60a5fa 100%); color: #fff; border: none; border-radius: 30px; font-size: 1.1rem;">
                        <i class="bi bi-person-plus-fill me-2"></i>Sign Up
                    </button>
                </form>
                <div class="mt-4 text-center">
                    <small>Already have an account? <a href="/login" class="text-decoration-none" style="color:#6366f1;font-weight:600;">Login</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Optionally add Bootstrap Icons CDN for the icon -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
